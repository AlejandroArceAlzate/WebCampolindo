#menu, #menu ul
	list-style none
	
#menu:before, #menu:after
	content ""
	display table
	
#menu:after
	clear both
#menu
	margin 2em 0 20em 7em
	zoom 1
	ul
		margin 20px 0 0 0
		visibility hidden
		position absolute
		top 30px
		left 0
		z-index 1
		transition all .2s ease-in-out
	li
		float left 
		position relative
		&:hover > ul
			visibility visible
			margin 0 
	a
		float left
		text-decoration none
	img
		z-index 9999
		&:hover
			opacity .85
		
#menu ul ul
	top 0
	left 150px
	margin 0 0 0 20px

#menu ul li
	float none
	display block
	border 0
	margin-left 1em 
	
#menu ul a
	padding 10px
	width 130px
	display block
	float none
	white-space nowrap
	text-transform none

#menu ul li:first-child > a:after
	content ""
	position absolute
	left 40px
	top -6px
#menu ul ul li:first-child a:after
	left -6px
	top 50%
	margin-top -6px
	border-left 0
    			
